div(layout="horizontal" id="general")
  div.column(flex layout="vertical")
    md-text-float(label='SKU' ng-model='variations.sku')
    md-text-float(label='Description' ng-model='variations.description')
    md-button.md-button.md-raised(
      ng-click='variations.add()'
      ng-disabled='!variations.sku || !variations.description'
    ) Add Variation
  div.column(flex layout="vertical")
    md-list
      md-item(ng-repeat="variation in variations.variations")
        md-item-content
          .md-tile-content
            h3 {{variation.sku}}
            h4 {{variation.description}}
        div(ng-if='!$last')
          md-divider
  div.column(flex layout="vertical")